<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipeImgView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            app:srcCompat="@android:drawable/ic_menu_camera"
            tools:ignore="ImageContrastCheck" />

        <Button
            android:id="@+id/recipeImgUploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeImgView"
            android:text="Take Image (required)"></Button>

        <TextView
            android:id="@+id/recipeTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeImgUploadButton"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/recipeTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipeTitleET"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeImgUploadButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="138dp"
            android:layout_toEndOf="@id/recipeTitleTV"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/recipePrepareTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeTitleTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/recipeCookingTime"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipePrepareTimeET"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeTitleET"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/recipePrepareTimeTV"
            android:hint="Enter in minutes"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/recipeServingsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipePrepareTimeTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/recipeServings"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipeServingsET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipePrepareTimeET"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/recipeServingsTV"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/recipeCategoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeServingsTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/recipeCategory"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipeCategoryET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeServingsET"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/recipeCategoryTV"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/recipeIngredientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeCategoryTV"
            android:layout_alignParentEnd="true"
            android:text="View Ingredients" />

        <TextView
            android:id="@+id/ingredientDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeIngredientButton"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/ingredientDescription"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientDescriptionET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeIngredientButton"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@id/ingredientDescriptionTV"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ingredientCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientDescriptionTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/ingredientCount"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientCountET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientDescriptionET"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="75dp"
            android:layout_toEndOf="@id/ingredientCountTV"
            android:importantForAutofill="no"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ingredientUnitTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientCountTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/ingredientUnit"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientUnitET"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientCountET"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/ingredientUnitTV"
            android:hint="Unit of Measure"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/ingredientCategoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientUnitTV"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/ingredientCategory"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ingredientCategoryET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredientUnitET"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/ingredientCategoryTV"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/recipeAddIngredientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientCategoryET"
            android:layout_alignParentEnd="true"
            android:text="Add Ingredient" />

        <TextView
            android:id="@+id/recipeCommentsTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipeAddIngredientButton"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/recipeComments"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/recipeCommentsET"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/recipeCommentsTV"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:hint="Enter Additional Comments here!"
            android:inputType="textPersonName"
            android:minHeight="48dp" />
    </RelativeLayout>
</ScrollView>